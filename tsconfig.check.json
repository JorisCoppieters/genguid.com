{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": false,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noPropertyAccessFromIndexSignature": true,
        "outDir": "./dist-app",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES2022",
        "useDefineForClassFields": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        // "module": "commonjs",
        // "moduleResolution": "node",
        /* Bundler mode */
        "module": "ESNext",
        "moduleResolution": "bundler",
        // "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "src/shared/env/config.dev.ts",
        "src/shared/env/config.test.ts",
        "src/shared/env/config.prod.ts",
    ],
    "include": [
        "**/*.ts"
    ],
}