{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": {
            "options": [
                "spaces",
                4
            ]
        },
        "linebreak-style": {
            "options": "LF"
        },
        "variable-name": {
            "options": [
                "allow-snake-case",
                "require-const-for-all-caps",
                "ban-keywords"
            ]
        },
        "no-var-requires": false,
        "no-any": {
            "severity": "warning"
        }
    },
    "rulesDirectory": []
}